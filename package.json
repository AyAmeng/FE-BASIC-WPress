{
  "name": "magic-wpress",
  "version": "0.0.2--alpha.4",
  "main": "index.js",
  "repository": "https://github.com/AyAmeng/magic-wpress.git",
  "author": "AyAmeng <372969383@qq.com>",
  "license": "MIT",
  "devDependencies": {
    "commitizen": "^2.10.1",
    "conventional-changelog-cli": "^2.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "cz-emoji": "^1.1.2",
    "husky": "^1.0.0-rc.13",
    "terminalizer": "^0.2.5",
    "vuepress": "^0.12.0",
    "webpack": "^4.16.5"
  },
  "scripts": {
    "dev": "vuepress dev docs",
    "build:github-pages": "VUEPRESS_BASE=/magic-wpress/ vuepress build docs",
    "build:production": "VUEPRESS_BASE=/ vuepress build docs",
    "deploy": "/bin/bash ./deploy-github.sh",
    "changelog": "conventional-changelog -p angular -i ./docs/changelog/README.md -s -r 0",
    "version": "/bin/bash ./deploy-production.sh && git push"
  },
  "husky": {
    "hooks": {
      "pre-push": "/bin/bash ./deploy-github.sh "
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
