  "license": "MIT",
  "devDependencies": {
    "commitizen": "^2.10.1",
    "conventional-changelog-cli": "^2.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.0.0-rc.13",
    "terminalizer": "^0.2.5",
